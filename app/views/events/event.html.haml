%head
 = stylesheet_link_tag 'event.css'

%section#header
 %h1 #{@event.title}

%section#content
 %h3= link_to 'Home', '/'
 %ul#info
  %li
   %div.left Description:
   %div.right= @event.description
  %li
   %div.left Where:
   %div.right= @event.location
  %li
   %div.left When:
   %div.right
    %span.gray From
    %span= @event.start.nice_format
    %span.gray to
    %span= @event.finish.nice_format
  %li
   %div.left Contact:
   %div.right
    %span= @event.contact_name
    %span.gray at
    %span= @event.contact_phone

