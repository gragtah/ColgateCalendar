%head
 = stylesheet_link_tag 'events.css'

%section#header
 %h1 #{@when}

 = will_paginate @posts

%section#content
 %table#events
  %thead
   %tr
    %th Title 
    %th Location
    %th Start
    %th Finish
    - if session[:logged_in] then
     %th Vote
  %tbody
   - @events.each do |event|
    %tr
     %td= link_to "#{event.title}", event_path(event)
     %td= link_to "#{event.location}", event_path(event)
     %td= link_to "#{event.start}", event_path(event)
     %td= link_to "#{event.finish}", event_path(event)
     - if session[:logged_in] then
      %td
       = link_to "upvote", event_upvote_path(:id => event.id)
       = link_to "downvote", event_downvote_path(event)
